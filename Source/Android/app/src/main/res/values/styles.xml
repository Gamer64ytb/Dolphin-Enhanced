<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DolphinBase" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorSurface">@color/dolphin</item>
        <item name="colorPrimary">@color/dolphin_accent</item>
        <item name="colorPrimaryDark">@color/dolphin</item>
        <item name="colorAccent">@color/dolphin_accent</item>

        <item name="colorPrimaryContainer">@color/dolphin</item>
        <item name="colorOnPrimaryContainer">@color/dolphin_accent</item>
        <item name="colorSecondaryContainer">@color/buttons</item>
        <item name="colorOnSecondaryContainer">@color/dolphin_accent</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="DolphinSettingsBase" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorSurface">@color/dolphin</item>
        <item name="colorPrimary">@color/dolphin_accent</item>
        <item name="colorPrimaryDark">@color/dolphin</item>
        <item name="colorAccent">@color/dolphin_accent</item>

        <item name="colorPrimaryContainer">@color/dolphin</item>
        <item name="colorOnPrimaryContainer">@color/dolphin_accent</item>
        <item name="colorSecondaryContainer">@color/buttons</item>
        <item name="colorOnSecondaryContainer">@color/dolphin_accent</item>
    </style>

    <style name="DolphinEmulationBase" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dolphin_accent</item>
        <item name="colorPrimaryDark">@color/dolphin</item>
        <item name="colorAccent">@color/dolphin_accent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@android:color/black</item>

        <item name="colorPrimaryContainer">@color/dolphin</item>
        <item name="colorOnPrimaryContainer">@color/dolphin_accent</item>
        <item name="colorSecondaryContainer">@color/buttons</item>
        <item name="colorOnSecondaryContainer">@color/dolphin_accent</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="textAllCaps">false</item>
    </style>

    <style name="InGameMenuOption" parent="Widget.Material3.Button.TextButton">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="OverlayInGameMenuOption" parent="InGameMenuOption">
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="TextAppearance"></style>

    <style name="MaterialDialog.Material3" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>

        <item name="materialAlertDialogTitleTextStyle">@style/MaterialDialog.Material3.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialDialog.Material3.Body</item>
        <item name="android:background">@color/dialog_color</item>
        <item name="colorSurface">@color/dolphin_background</item>

        <item name="buttonBarPositiveButtonStyle">@style/MaterialDialog.Material3.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialDialog.Material3.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/MaterialDialog.Material3.Button</item>
    </style>

    <style name="MaterialDialog.Material3.Title" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="MaterialDialog.Material3.Body" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="MaterialDialog.Material3.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dolphin_accent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="rippleColor">@color/dolphin_accent_20</item>
    </style>

</resources>
